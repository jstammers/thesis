@article{Vigue2006,
abstract = {Atom interferometers are very sensitive to accelerations and rotations. This property, which has$\backslash$nsome very interesting applications, induces a deleterious phase noise due to the seismic noise of$\backslash$nthe laboratory and this phase noise is sufficiently large to reduce the fringe visibility in many$\backslash$nexperiments. We develop a model calculation of this phase noise in the case of Mach-Zehnder atom$\backslash$ninterferometers and we apply this model to our thermal lithium interferometer. We are able to$\backslash$nexplain a large fraction of the observed phase noise which has been detected through the rapid$\backslash$ndependence of the fringe visibility with the diffraction order. We think that the dynamical model$\backslash$ndeveloped here should be very useful to reduce the vibration-induced phase noise in atom$\backslash$ninterferometers, making many new experiments feasible.},
